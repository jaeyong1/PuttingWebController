<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="topologyMapper">

	<insert id="insertItem">
		INSERT INTO `jaeyong1`.`put_fields` (
		`id` ,
		`ccname` ,
		`holename` ,
		`desc` ,
		`heightdata`
		)
		VALUES (
		'4', 'A', 'B', 'C', 'D'
		);

	</insert>

	<select id="selectItemList" resultMap="FieldItemMap">
		SELECT *
		FROM `put_fields`
		ORDER BY  `put_fields`.`id` ASC 
		LIMIT 0 , 30
	</select>

	<select id="getDBServerTime" resultType="string">
		select now()
	</select>


	<select id="queryPlayerByIDPW" parameterType="String" resultMap="PlayerItemMap">
		SELECT
		`loginId`,
		`locationId`,
		`locationName`,
		`deviceId`,
		`selectedMapId`,
		`heightData`,
		`runState`
		FROM
		put_player
		WHERE
		`loginId` =
		#{logingUserId} AND
		`password`
		= #{loginUserPassword}
	</select>

</mapper>
